<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text="Chipotle Online Order"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.131" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="530dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Menu Item 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="185dp"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="125dp"
                    android:layout_height="150dp"
                    android:cropToPadding="false"
                    android:src="@drawable/burrito" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/menu_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Burrito"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/menu_description1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your choice of freshly grilled meat or sofritas wrapped in a warm flour tortilla with rice, beans, or fajita veggies, and topped with guac, salsa, sour cream or cheese."
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/menu_price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$11.05"
                        android:textSize="18sp"
                        android:textStyle="italic | bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Menu Item 2 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="185dp"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="125dp"
                    android:layout_height="150dp"
                    android:src="@drawable/burrito_bowl" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/menu_title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bowl"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/menu_description2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your choice of freshly grilled meat or sofritas served in a delicious bowl with rice, beans, or fajita veggies, and topped with guac, salsa, sour cream or cheese."
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/menu_price2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$11.05"
                        android:textSize="18sp"
                        android:textStyle="italic | bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Menu Item 3 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="185dp"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="125dp"
                    android:layout_height="150dp"
                    android:src="@drawable/quesadilla" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/menu_title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quesadilla"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/menu_description3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cheese in a Flour Tortilla with your choice of meat, sofritas or fajita veggies and three included sides."
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/menu_price3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$11.75"
                        android:textSize="18sp"
                        android:textStyle="italic | bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Menu Item 4 -->

            <!-- Menu Item 5 -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="185dp"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="125dp"
                    android:layout_height="150dp"
                    android:src="@drawable/tacos" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/menu_title4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tacos"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/menu_description4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your choice of freshly grilled meat, sofritas, or guacamole, and up to five toppings served in a tortilla."
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/menu_price4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$11.05"
                        android:textSize="18sp"
                        android:textStyle="italic | bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="125dp"
                    android:layout_height="150dp"
                    android:src="@drawable/chips_guac" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/menu_title5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chips &amp; Guac"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/menu_description5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Small chips and guacamole"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/menu_price5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.55"
                        android:textSize="18sp"
                        android:textStyle="italic | bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Add more menu items here in the same pattern -->

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:padding="18dp"
        android:text="Checkout"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView" />

    <Button
        android:id="@+id/button_apply_credit_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:padding="18dp"
        android:text="Apply for Credit Card"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

</androidx.constraintlayout.widget.ConstraintLayout>
